@using vidly.Static_data;
@model vidly.Models.Movie
@{
    ViewBag.Title = StaticData.AppTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Release Date: @Model.ReleaseDate.ToLongDateString()</li>
    <li>Date Added: @Model.CreatedOn.ToLongDateString()</li>
    <li>Number in stock: @Model.numberInStock</li>
</ul>
