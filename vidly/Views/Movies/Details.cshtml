@model vidly.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>Genre: @Model.Genre.Name</li>
    @if (Model.ReleaseDate != null)
    {
        <li>Release Date: @Model.ReleaseDate.Value.ToLongDateString()</li>
    }
    @if (Model.CreatedOn != null)
    {
        <li>Date Added: @Model.CreatedOn.Value.ToLongDateString()</li>
    }
    <li>Number in stock: @Model.numberInStock</li>
</ul>
