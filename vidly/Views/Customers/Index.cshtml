@using vidly.Static_data;
@using vidly.Models;

@{
    ViewBag.Title = StaticData.AppTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

@if (Model == null)
{
    <p>We don't have any customers yet.</p>
}
else
{
    <table class="table table-striped table-hover table-bordered">
        <thead>
            <tr>
                <th>Customer</th>
                <th>Discount Rate</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@Html.ActionLink(((Customer)customer).Name, "details", "Customers", new { Id = customer.Id }, null)</td>
                    <td>@customer.MembershipType.DiscountRate %</td>
                </tr>
            }
        </tbody>
    </table>
}

