@section scripts
{
    <script> 
        $(document).ready(function () {
            let customersTable = $("#customersTable").DataTable({
                ajax: {
                    url: "/api/customers",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                        render: function (data, type, row) {
                            return "<a href='/customers/edit/" + row.id + "'>" + row.name + "</a>";
                        }
                    },
                    {
                        data: "membershipType.name"
                    },
                    {
                        data: "id",
                        render: function (data) {
                            return "<button class='btn-link js-delete' data-customer-id=" + data + "> Delete </button>";
                        }
                    }
                ]
            });

            $("#customersTable").on("click", ".js-delete", function () {
                let deleteBtn = $(this);
                bootbox.confirm("Are you sure you want to delete this customer ?", function (result) {
                    if (result) {
                        let customerId = deleteBtn.attr("data-customer-id");
                        deleteCustomer(customersTable, deleteBtn, customerId);
                    }
                });
            });
        });

        function deleteCustomer(customersTable, deleteBtn, customerId) {
            $.ajax({
                url: "/api/customers/" + customerId,
                method: "DELETE",
                success: removeDatatableRowData(customersTable, deleteBtn)
            });     
        }

        function removeDatatableRowData(customersTable, deleteBtn) {
            customersTable.row(deleteBtn.parents("tr")).remove() // to remove row data from datatable
                .draw(); // to make datatable refresh/redraw itself with updated data
        }
    </script>
}

